<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include
        android:id="@+id/view_base_status_bar"
        layout="@layout/view_status_bar"/>
    <RelativeLayout
        android:background="@color/app_status_bar_color"
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="13dp"
            android:id="@+id/iv_base_back"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/b2_nav_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/just_color_333333"
            android:id="@+id/tv_base_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/just_color_333333"
            android:textSize="17sp"
            android:visibility="gone"
            android:padding="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_base_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_base_line"
        style="@style/Line"/>

</LinearLayout>