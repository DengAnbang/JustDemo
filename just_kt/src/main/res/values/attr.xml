<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TwoTextLinearView">
        <attr name="leftTextColor" format="color|reference" />
        <attr name="rightTextColor" format="color|reference" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="leftDrawable" format="reference" />
        <attr name="showArrow" format="boolean" />
        <attr name="rightDrawable" format="reference" />
        <attr name="drawablePadding" format="dimension"/>
        <attr name="rightGravity" format="integer">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
        </attr>
    </declare-styleable>

    <!--图片加载控件的自定义属性-->
    <declare-styleable name="ImageViewJust">
        <attr name="src" format="reference|integer"/>
        <attr name="placeholder" format="reference|integer"/>
        <attr name="error" format="reference|integer"/>
        <attr name="defaultRounding" format="boolean"/>
        <attr name="angle_left" format="integer"/>
        <attr name="angle_top" format="integer"/>
        <attr name="angle_right" format="integer"/>
        <attr name="angle_bottom" format="integer"/>
    </declare-styleable>
</resources>