<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--从下往上弹PopupWindow-->
    <style name="AnimBottomToTop" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>
    <!--从上往下弹PopupWindow-->
    <style name="AnimTopToBottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim_top</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim_top</item>
    </style>
    <!--加载进度-->
    <style name="Theme.ProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#dedede</item>
    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleBackgroundStyle">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Base.Animation.Dialog.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <!--选择照片和拍照选择页面theme，因为继承自AppCompatActivity所以必须使用AppCompat类型主题。-->
    <style name="Dialog" parent="BaseDialog">
        <item name="android:windowAnimationStyle">@style/Base.Animation.Dialog.Style</item>
    </style>
    <!--密码输入框-->
    <style name="EditText_password">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:hint">"请输入密码"</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">18</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/just_color_333333</item>
    </style>
    <!--手机号输入-->
    <style name="EditText_phone">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:hint">"请输入手机号"</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">11</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/just_color_333333</item>
    </style>
    <!--验证码-->
    <style name="EditText_captcha">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:hint">"请输入验证码"</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">@integer/captcha_length</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/just_color_333333</item>
    </style>
    <!--提交按钮-->
    <style name="Btn_submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_gradient_btn</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/just_color_ffffff</item>
    </style>
</resources>